@model br.com.devset.ReclameSaude.Models.UsuarioModel

@{
    ViewBag.Title = "Editar Usuário";
}

<h2>@ViewBag.Title</h2>

<form asp-controller="Usuario" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Nome">@Model.Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">@Model.Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WatsApp">@Model.WatsApp</label>
        <input asp-for="WatsApp" class="form-control" />
        <span asp-validation-for="WatsApp" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataNascimento">@Model.DataNascimento</label>
        <input asp-for="DataNascimento" class="form-control" type="date" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Senha">@Model.Senha</label>
        <input asp-for="Senha" class="form-control" type="password" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>


