@model br.com.devset.reclame.Models.ReclamacaoModel

<h1>Nova Reclamação</h1>

<form asp-controller="Reclamacao" asp-action="Create" method="post">
    <div>
        <label asp-for="Descricao">Descrição:</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="UsuarioId">Usuário:</label>
        <select asp-for="UsuarioId" asp-items="ViewBag.Usuarios" class="form-control">
            <option value="">Selecione um usuário</option>
        </select>
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="HospitalId">Hospital:</label>
        <select asp-for="HospitalId" asp-items="ViewBag.Hospitais" class="form-control">
            <option value="">Selecione um hospital</option>
        </select>
        <span asp-validation-for="HospitalId" class="text-danger"></span>
    </div>

    <div>
        <input type="submit" value="Cadastrar Reclamação" class="btn btn-primary" />
    </div>
</form>

<a asp-controller="Reclamacao" asp-action="Index">Voltar à lista de reclamações</a>
