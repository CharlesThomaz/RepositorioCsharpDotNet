@model IEnumerable<br.com.devset.Models.ClienteModel>

<h1>Clientes</h1>

@if (!string.IsNullOrEmpty((string)TempData["mensagemSucesso"]))
{
    <div class="alert alert-success" role="alert">
        @TempData["mensagemSucesso"]
    </div>
}

<p>
    <a asp-controller="Cliente" asp-action="Create" class="btn btn-primary">Novo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Email</th>
            <th>Nascimento</th>
            <th>Representante</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ClienteId</td>
                <td>@item.Nome</td>
                <td>@item.Sobrenome</td>
                <td>@item.Email</td>
                <td>@item.DataNascimento?.ToString("dd/MM/yyyy")</td>
                <td>@item.Representante?.NomeRepresentante</td>
                <td>
                    <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-warning">Editar</a>
                    <a asp-controller="Cliente" asp-action="Detail" asp-route-id="@item.ClienteId" class="btn btn-info">Consultar</a>
                    <a asp-controller="Cliente" asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
